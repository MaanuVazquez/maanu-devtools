{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node",
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./@types", "types.ts"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*", "*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
